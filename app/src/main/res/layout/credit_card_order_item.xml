<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="@android:color/white"
             android:orientation="vertical"
           >
    <RelativeLayout
        android:padding="@dimen/margin_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv1"
            android:text="订单编号："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_no"
            android:text=""
            android:layout_toRightOf="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="20180509:21:90"
            android:layout_alignParentRight="true"
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View style="@style/divide_line_match"/>
    <RelativeLayout
        android:padding="@dimen/margin_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/text_333333"
            android:id="@+id/tv2"
            android:text="申请金额："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/text_333333"
            android:id="@+id/tv_amount"
            android:text="97207502304870.00"
            android:layout_toRightOf="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/text_333333"
            android:drawablePadding="4dp"
            android:drawableLeft="@drawable/icon_card_proba"
            android:text="进行中"
            android:layout_alignParentRight="true"
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:paddingRight="@dimen/margin_16"
        android:paddingLeft="@dimen/margin_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/text_333333"
            android:id="@+id/tv3"
            android:text="申请信用卡："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/text_333333"
            android:id="@+id/tv_bank_no"
            android:text=""
            android:layout_toRightOf="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:padding="@dimen/margin_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/text_333333"
            android:id="@+id/tv_name"
            android:text="申请信用卡"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/text_333333"
            android:id="@+id/tv_reason"
            android:text=""
            android:layout_toRightOf="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rl_delete"
        android:paddingBottom="@dimen/margin_16"
        android:paddingRight="@dimen/margin_16"
        android:paddingLeft="@dimen/margin_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View android:id="@+id/v"
            style="@style/divide_line_match"/>
        <TextView
            android:textSize="@dimen/sp_16"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_below="@+id/v"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:background="@color/loan_normal"
            android:textColor="@color/white"
            android:id="@+id/tv_delete"
            android:text="删 除"
            android:layout_width="72dp"
            android:layout_height="32dp" />
    </RelativeLayout>
    <View
        android:background="@color/page_bg_color"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
</LinearLayout>