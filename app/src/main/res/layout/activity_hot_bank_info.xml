<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/page_bg_color"
    tools:context="com.qingmang.bank.HotBankInfoActivity">
    <include layout="@layout/toolbar"/>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll_root"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:background="@drawable/bank_top_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_card_logo"
                android:layout_marginLeft="@dimen/margin_16"
                android:layout_centerVertical="true"
                android:layout_width="60dp"
                android:layout_height="60dp" />
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/iv_card_logo"
                android:textSize="@dimen/sp_18"
                android:textColor="@color/white"
                android:text="----"
                android:id="@+id/tv_card_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginRight="@dimen/margin_16"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/tv_card_name"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/iv_card_logo"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/white"
                android:text="----"
                android:id="@+id/tv_bank_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:background="@color/white"
            android:padding="@dimen/margin_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/iv"
                android:src="@drawable/icon_bank_tgl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_centerVertical="true"
                android:text="通过率"
                android:textColor="@color/text_333333"
                android:textSize="@dimen/margin_16"
               android:layout_marginLeft="@dimen/margin_16"
                android:layout_toRightOf="@+id/iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/tv_rate"
                android:text="--"
                android:textColor="@color/text_333333"
                android:textSize="@dimen/margin_16"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View style="@style/divide_line_match"/>
        <RelativeLayout
            android:background="@color/white"
            android:padding="@dimen/margin_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/iv_v"
                android:src="@drawable/icon_bank_pksd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_centerVertical="true"
                android:text="批卡速度"
                android:textColor="@color/text_333333"
                android:textSize="@dimen/margin_16"
                android:layout_marginLeft="@dimen/margin_16"
                android:layout_toRightOf="@+id/iv_v"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/tv_v"
                android:text="--"
                android:textColor="@color/text_333333"
                android:textSize="@dimen/margin_16"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View style="@style/divide_line_match"/>
        <RelativeLayout
            android:background="@color/white"
            android:padding="@dimen/margin_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/iv_place"
                android:src="@drawable/icon_bank_fjwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_centerVertical="true"
                android:text="附近网点"
                android:textColor="@color/text_333333"
                android:textSize="@dimen/margin_16"
                android:layout_marginLeft="@dimen/margin_16"
                android:layout_toRightOf="@+id/iv_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:drawablePadding="6dp"
                android:layout_centerVertical="true"
                android:drawableRight="@drawable/icon_more"
                android:id="@+id/tv_place"
                android:text="--"
                android:textColor="@color/text_333333"
                android:textSize="@dimen/margin_16"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View style="@style/divide_line_match"/>
        <RelativeLayout
            android:background="@color/white"
            android:layout_marginTop="10dp"
            android:padding="@dimen/margin_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/iv_range"
                android:src="@drawable/icon_bank_edfw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_centerVertical="true"
                android:text="额度范围"
                android:textColor="@color/text_333333"
                android:textSize="@dimen/margin_16"
                android:layout_marginLeft="@dimen/margin_16"
                android:layout_toRightOf="@+id/iv_range"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View style="@style/divide_line_match"/>
        <RelativeLayout
            android:background="@color/white"
            android:padding="@dimen/margin_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/iv_pk"
                android:src="@drawable/icon_bank_jk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_centerVertical="true"
                android:text="普卡 金卡"
                android:textColor="@color/text_333333"
                android:textSize="@dimen/margin_16"
                android:layout_marginLeft="@dimen/margin_16"
                android:layout_toRightOf="@+id/iv_pk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/tv_puka"
                android:text="--"
                android:textColor="@color/text_333333"
                android:textSize="@dimen/margin_16"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View style="@style/divide_line_match"/>
        <RelativeLayout
            android:background="@color/white"
            android:padding="@dimen/margin_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/iv_bj"
                android:src="@drawable/icon_bank_jk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_centerVertical="true"
                android:text="白金卡"
                android:textColor="@color/text_333333"
                android:textSize="@dimen/margin_16"
                android:layout_marginLeft="@dimen/margin_16"
                android:layout_toRightOf="@+id/iv_bj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/tv_baijin"
                android:text="--"
                android:textColor="@color/text_333333"
                android:textSize="@dimen/margin_16"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View style="@style/divide_line_match"/>
        <RelativeLayout
            android:background="@color/white"
            android:layout_marginTop="10dp"
            android:padding="@dimen/margin_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/iv_ac"
                android:src="@drawable/icon_bank_yhhd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_centerVertical="true"
                android:text="优惠活动"
                android:textColor="@color/text_333333"
                android:textSize="@dimen/margin_16"
                android:layout_marginLeft="@dimen/margin_16"
                android:layout_toRightOf="@+id/iv_ac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View style="@style/divide_line_match"/>
        <TextView
            android:id="@+id/tv_activity"
            android:paddingRight="@dimen/margin_16"
            android:paddingBottom="@dimen/margin_16"
            android:paddingTop="@dimen/margin_16"
            android:paddingLeft="32dp"
            android:background="@color/white"
            android:layout_centerVertical="true"
            android:text="优惠活动"
            android:textColor="@color/text_333333"
            android:textSize="@dimen/sp_14"
            android:layout_toRightOf="@+id/iv_ac"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:background="@color/white"
            android:layout_marginTop="10dp"
            android:padding="@dimen/margin_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/iv_app"
                android:src="@drawable/icon_bank_gfyy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_centerVertical="true"
                android:text="官方应用"
                android:textColor="@color/text_333333"
                android:textSize="@dimen/margin_16"
                android:layout_marginLeft="@dimen/margin_16"
                android:layout_toRightOf="@+id/iv_app"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View style="@style/divide_line_match"/>


        <RelativeLayout
            android:background="@color/white"
            android:padding="@dimen/margin_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/iv_ap"
                android:layout_width="80dp"
                android:layout_height="80dp" />
            <TextView
                android:id="@+id/tv_app_des"
                android:layout_centerVertical="true"
                android:text="官方应用"
                android:textColor="@color/text_333333"
                android:textSize="@dimen/margin_16"
                android:layout_marginLeft="@dimen/margin_16"
                android:layout_toRightOf="@+id/iv_ap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View style="@style/divide_line_match"/>
    </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
