<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/loan_default_padding_big">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_loan_detail_process_icon"
            android:layout_width="@dimen/loan_process_icon_normal"
            android:layout_height="@dimen/loan_process_icon_normal"
            android:src="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/tv_loan_detail_process_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/loan_default_margin_small" />


    </LinearLayout>

    <ImageView
        android:id="@+id/iv_loan_detail_process_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/loan_default_margin_small"
        android:src="@drawable/apply_step_next" />

</LinearLayout>