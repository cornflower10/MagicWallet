<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="@android:color/white"
             android:orientation="vertical"
           >
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<RelativeLayout
  android:layout_margin="@dimen/margin_16"
    android:id="@+id/rl_des"
    android:layout_width="wrap_content"
    android:layout_height="80dp">
 <ImageView
     android:id="@+id/iv_card"
     android:layout_width="120dp"
     android:layout_height="match_parent" />
 <LinearLayout
     android:layout_marginLeft="8dp"
     android:layout_toRightOf="@+id/iv_card"
     android:orientation="vertical"
     android:layout_width="wrap_content"
     android:layout_height="match_parent">
<TextView
    android:textSize="@dimen/sp_14"
    android:textColor="@color/text_333333"
    android:id="@+id/tv_card_name"
    android:text="交通银行标准卡"
    android:layout_width="wrap_content"
    android:layout_height="0dp"
    android:layout_weight="1"/>
 <TextView
     android:id="@+id/tv_peoples"
     android:text="1000人已申请"
     android:layout_width="wrap_content"
     android:layout_height="0dp"
     android:layout_weight="1" />

  <TextView
      android:textColor="@color/loan_normal"
      android:background="@drawable/shape_coner_loan_normal"
      android:id="@+id/tv_des"
      android:text="百元刷卡金"
      android:layout_width="wrap_content"
      android:layout_height="0dp"
      android:layout_weight="1"/>
 </LinearLayout>
</RelativeLayout>

 <LinearLayout
     android:layout_marginRight="@dimen/margin_16"
     android:gravity="right"
     android:layout_marginBottom="@dimen/margin_16"
     android:layout_marginTop="@dimen/margin_16"
     android:layout_marginLeft="8dp"
     android:layout_toRightOf="@+id/iv_card"
     android:orientation="vertical"
     android:layout_width="wrap_content"
     android:layout_height="match_parent">
   <RelativeLayout
       android:layout_weight="1"
       android:layout_width="wrap_content"
       android:layout_height="0dp">
    <TextView
        android:textColor="@color/loan_normal"
        android:background="@drawable/shape_loan_normal"
        android:layout_marginRight="@dimen/margin_16"
        android:layout_toLeftOf="@+id/iv1"
        android:text="新"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="@color/loan_normal"
        android:background="@drawable/shape_loan_normal"
        android:id="@+id/iv1"
        android:text="热"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
   </RelativeLayout>
  <TextView
      android:id="@+id/tv_date"
      android:text="56天免息期"
      android:layout_width="wrap_content"
      android:layout_height="0dp"
      android:layout_weight="1" />

  <TextView
      android:id="@+id/tv_amount"
      android:text="5百元刷卡金"
      android:layout_width="wrap_content"
      android:layout_height="0dp"
      android:layout_weight="1"/>
 </LinearLayout>
</LinearLayout>
 <View
    style="@style/divide_line"/>
</LinearLayout>