<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/page_bg_color"
    tools:context="com.qingmang.bank.BankCardAddActivity">
    <include layout="@layout/toolbar"/>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:padding="@dimen/margin_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:src="@drawable/icon_safety"
        android:id="@+id/iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_centerVertical="true"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@+id/iv_icon"
        android:textColor="@color/text_666666"
        android:textSize="@dimen/sp_14"
        android:text="请绑定持卡人本人的银行卡"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:padding="@dimen/margin_16"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text_666666"
            android:text="持卡人"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <EditText
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text_666666"
            android:id="@+id/et_name"
            android:background="@color/white"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View style="@style/divide_line_match"/>
    <LinearLayout
        android:padding="@dimen/margin_16"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text_666666"
            android:text="卡号"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <EditText
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text_666666"
            android:hint="无需网银／免手续费"
            android:id="@+id/et_card_no"
            android:background="@color/white"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View style="@style/divide_line_match"/>
    <LinearLayout
        android:layout_marginTop="8dp"
        android:padding="@dimen/margin_16"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text_666666"
            android:text="银行名称"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <EditText
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text_666666"
            android:id="@+id/et_bank_name"
            android:background="@color/white"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View style="@style/divide_line_match"/>
    <LinearLayout
        android:padding="@dimen/margin_16"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1.5"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text_666666"
            android:text="签名区后三位"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <EditText
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text_666666"
            android:id="@+id/et_last_no"
            android:background="@color/white"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View style="@style/divide_line_match"/>
    <LinearLayout
        android:padding="@dimen/margin_16"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1.5"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text_666666"
            android:text="绑卡手机"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <EditText
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text_666666"
            android:id="@+id/et_phone"
            android:background="@color/white"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View style="@style/divide_line_match"/>
    <LinearLayout
        android:padding="@dimen/margin_16"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text_666666"
            android:text="有效期"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text_666666"
            android:id="@+id/tv_date"
            android:background="@color/white"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View style="@style/divide_line_match"/>

    <LinearLayout
        android:paddingBottom="@dimen/margin_16"
        android:orientation="vertical"
        android:paddingLeft="36dp"
        android:paddingRight="36dp"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_marginTop="@dimen/margin_16"
            android:layout_width="match_parent"
            android:layout_height="180dp">
            <ImageView
                android:scaleType="fitCenter"
                android:src="@drawable/add_credit_front"
                android:layout_gravity="center"
                android:id="@+id/iv_z"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>
        <FrameLayout
            android:layout_marginTop="@dimen/margin_16"
            android:layout_width="match_parent"
            android:layout_height="180dp">
            <ImageView
                android:scaleType="fitCenter"
                android:src="@drawable/add_credit_back"
                android:layout_gravity="center"
                android:id="@+id/iv_f"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>
    </LinearLayout>
        <LinearLayout
            android:padding="@dimen/margin_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/bt_sure"
                android:text="确定"
                android:layout_weight="1"
                android:background="@color/loan_normal"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/bt_cancle"
                android:layout_marginLeft="@dimen/margin_16"
                android:text="取消"
                android:layout_weight="1"
                android:background="@color/loan_normal"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
