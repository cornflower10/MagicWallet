<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/loan_default_padding_big">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_card_cashout_logo"
            android:layout_width="@dimen/loan_icon_normal_tip"
            android:layout_height="@dimen/loan_icon_normal_tip" />

        <TextView
            android:id="@+id/tv_no_card_bank_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_no_card_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/loan_default_margin" />

        <TextView
            android:id="@+id/tv_no_card_bank_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/loan_default_margin" />
    </LinearLayout>

    <View style="@style/HorizontalLine" />

</LinearLayout>