<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/details_bg"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/loan_default_padding_big">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_loan_detail_icon"
                            android:layout_width="@dimen/loan_icon_normal"
                            android:layout_height="@dimen/loan_icon_normal" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/loan_default_margin"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_loan_detail_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/loan_name"
                                android:textColor="@color/loan_name"
                                android:textSize="@dimen/loan_name" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/loan_default_margin"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/tv_loan_detail_nature1"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/shape_loan_normal"
                                            android:text="@string/loan_nature1"
                                            android:textColor="@color/loan_normal"
                                            android:textSize="@dimen/loan_nature" />

                                        <TextView
                                            android:id="@+id/tv_loan_detail_nature2"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="@dimen/loan_default_margin_small"
                                            android:background="@drawable/shape_loan_normal"
                                            android:text="@string/loan_nature2"
                                            android:textColor="@color/loan_normal"
                                            android:textSize="@dimen/loan_nature" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/loan_default_margin_small"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/tv_man_detail_amount"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/loan_man_amount"
                                            android:textColor="@color/loan_name"
                                            android:textSize="@dimen/loan_name" />

                                        <TextView
                                            android:id="@+id/tv_man_detail_amount_apply"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/loan_man_amount_apply" />

                                    </LinearLayout>


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/tv_detail_highest"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/loan_highest" />

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/loan_default_margin_small"
                                        android:gravity="center_vertical"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/tv_detail_highest_value"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/loan_highest_value"
                                            android:textColor="@color/loan_normal"
                                            android:textSize="@dimen/loan_name_big" />

                                        <TextView
                                            android:id="@+id/tv_detail_highest_value_unit"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/loan_highest_value_unit" />

                                    </LinearLayout>

                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        style="@style/HorizontalLine"
                        android:layout_marginTop="@dimen/loan_default_margin_small" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/loan_default_margin_small"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="@dimen/loan_icon_normal_tip"
                            android:layout_height="@dimen/loan_icon_normal_tip"
                            android:src="@drawable/icon_bank_tgl" />

                        <TextView
                            android:id="@+id/tv_loan_detail_introduct"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/loan_default_margin_small"
                            android:text="@string/loan_detail_introduct" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/loan_default_margin"
                android:background="@drawable/details_bg"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/loan_default_padding_big">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="true"
                            android:focusableInTouchMode="true">

                            <EditText
                                android:id="@+id/et_loan_detail_repayment_value"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/shape_loan_detail_edit"
                                android:inputType="number"
                                android:padding="@dimen/loan_default_padding" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|right"
                                android:layout_marginRight="@dimen/loan_default_margin_small"
                                android:text="@string/loan_detail_repayment_value_unit" />
                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/loan_default_margin_small"
                            android:text="@string/loan_detail_Limit_range"
                            android:textColor="@color/loan_detail_tip"
                            android:textSize="@dimen/loan_detail_tip" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/loan_default_padding_big">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="true"
                            android:focusableInTouchMode="true">

                            <EditText
                                android:id="@+id/et_loan_detail_lending_month"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/shape_loan_detail_edit"
                                android:digits="0123456789"
                                android:inputType="number"
                                android:maxLength="2"
                                android:padding="@dimen/loan_default_padding" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|right"
                                android:layout_marginRight="@dimen/loan_default_margin_small"
                                android:text="@string/loan_detail_lending_month_unit" />
                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/loan_default_margin_small"
                            android:text="@string/loan_detail_term_range"
                            android:textColor="@color/loan_detail_tip"
                            android:textSize="@dimen/loan_detail_tip" />
                    </LinearLayout>

                </LinearLayout>

                <View
                    style="@style/HorizontalLine"
                    android:layout_marginTop="@dimen/loan_default_margin_small" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/loan_default_margin"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tv_loan_detail_range_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/loan_detail_range_value"
                                android:textColor="@color/loan_normal"
                                android:textSize="@dimen/loan_name_big" />

                            <TextView
                                android:id="@+id/tv_loan_detail_range_value_unit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/loan_detail_range_value_unit"
                                android:textColor="@color/loan_normal" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/loan_detail_range_reference"
                            android:textColor="@color/loan_name"
                            android:textSize="@dimen/loan_detail_tip" />

                    </LinearLayout>

                    <View style="@style/VerticalLine" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tv_loan_detail_repayment_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/loan_detail_repayment_value"
                                android:textColor="@color/loan_normal"
                                android:textSize="@dimen/loan_name_big" />

                            <TextView
                                android:id="@+id/tv_loan_detail_repayment_value_unit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/loan_detail_repayment_value_unit"
                                android:textColor="@color/loan_normal" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/loan_detail_repayment_month"
                            android:textColor="@color/loan_name"
                            android:textSize="@dimen/loan_detail_tip" />

                    </LinearLayout>

                    <View style="@style/VerticalLine" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tv_loan_detail_lending_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/loan_detail_lending_time"
                                android:textColor="@color/loan_normal"
                                android:textSize="@dimen/loan_name_big" />

                            <TextView
                                android:id="@+id/tv_loan_detail_lending_time_unit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/loan_detail_lending_time_unit"
                                android:textColor="@color/loan_normal" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/loan_detail_lending_time_fastest"
                            android:textColor="@color/loan_name"
                            android:textSize="@dimen/loan_detail_tip" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/loan_default_margin"
                android:orientation="vertical"
                android:padding="@dimen/loan_default_padding_big">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/loan_icon_normal_tip"
                        android:layout_height="@dimen/loan_icon_normal_tip"
                        android:src="@drawable/icon_apply_lc" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/loan_default_margin_small"
                        android:text="@string/loan_detail_apply_process"
                        android:textColor="@color/loan_normal" />
                </LinearLayout>

                <View
                    style="@style/HorizontalLine"
                    android:layout_marginTop="@dimen/loan_default_margin_small" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/loan_default_padding_big">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_loan_detail_apply_process"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </android.support.v7.widget.RecyclerView>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/loan_default_margin"
                android:orientation="vertical"
                android:padding="@dimen/loan_default_padding_big">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/loan_icon_normal_tip"
                        android:layout_height="@dimen/loan_icon_normal_tip"
                        android:src="@drawable/icon_apply_tj" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/loan_default_margin_small"
                        android:text="@string/loan_detail_apply_condition"
                        android:textColor="@color/loan_normal" />
                </LinearLayout>

                <View
                    style="@style/HorizontalLine"
                    android:layout_marginTop="@dimen/loan_default_margin_small" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/loan_default_padding_big">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_loan_detail_apply_condition"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </android.support.v7.widget.RecyclerView>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/loan_default_margin"
                android:orientation="vertical"
                android:padding="@dimen/loan_default_padding_big">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/loan_icon_normal_tip"
                        android:layout_height="@dimen/loan_icon_normal_tip"
                        android:src="@drawable/icon_apply_zl" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/loan_default_margin_small"
                        android:text="@string/loan_detail_apply_need_data"
                        android:textColor="@color/loan_normal" />
                </LinearLayout>

                <View
                    style="@style/HorizontalLine"
                    android:layout_marginTop="@dimen/loan_default_margin_small" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/loan_default_padding_big">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_loan_detail_apply_need_data"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </android.support.v7.widget.RecyclerView>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_loan_detail_apply_lending"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/loan_default_margin"
                android:layout_marginLeft="@dimen/loan_default_margin_big"
                android:layout_marginRight="@dimen/loan_default_margin_big"
                android:layout_marginTop="@dimen/loan_default_margin"
                android:background="@drawable/shape_loan_detail_apply_lending"
                android:gravity="center"
                android:padding="@dimen/loan_default_padding"
                android:text="@string/loan_detail_apply_lending"
                android:textColor="@color/white" />
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>