<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/page_bg_color"
    tools:context="com.qingmang.bank.CreditCardInfoActivity">
     <include layout="@layout/toolbar"/>
    <View style="@style/divide_line_match"/>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
        <LinearLayout
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/sp_18"
                android:layout_marginTop="@dimen/margin_16"
                android:layout_marginLeft="@dimen/margin_16"
                android:text="招商"
                android:textColor="@color/text_333333"
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:background="@drawable/shape_loan_normal"
                android:layout_marginRight="@dimen/margin_16"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/sp_14"
                android:layout_marginTop="@dimen/margin_16"
                android:layout_marginLeft="@dimen/margin_16"
                android:text="招商"
                android:textColor="@color/loan_normal"
                android:id="@+id/tv_card_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:background="@drawable/shape_loan_normal"
                android:layout_toLeftOf="@+id/tv_card_type"
                android:textSize="@dimen/sp_14"
                android:layout_marginTop="@dimen/margin_16"
                android:layout_marginLeft="@dimen/margin_16"
                android:text="招商"
                android:textColor="@color/loan_normal"
                android:id="@+id/tv_coin_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:background="@drawable/shape_loan_normal"
                android:layout_toLeftOf="@+id/tv_coin_type"
                android:textSize="@dimen/sp_14"
                android:layout_marginTop="@dimen/margin_16"
                android:layout_marginLeft="@dimen/margin_16"
                android:text="招商"
                android:textColor="@color/loan_normal"
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <TextView
            android:textSize="@dimen/sp_14"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginLeft="@dimen/margin_16"
            android:text="招商"
            android:textColor="@color/text_666666"
            android:id="@+id/tv_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_margin="@dimen/margin_16"
            android:id="@+id/iv_card_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:padding="@dimen/margin_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/text_333333"
                android:textSize="@dimen/sp_16"
                android:text="专享特权"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="@dimen/sp_16"
                android:drawablePadding="6dp"
                android:drawableRight="@drawable/icon_more"
                android:layout_alignParentRight="true"
                android:text="特权详情"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View style="@style/divide_line_match"/>

    </LinearLayout>
        <Button
            android:id="@+id/bt_sure"
            android:textSize="@dimen/sp_18"
            android:background="@color/loan_normal"
            android:textColor="@color/white"
            android:text="申请"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
